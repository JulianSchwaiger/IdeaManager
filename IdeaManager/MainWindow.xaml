<Window x:Class="IdeaManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IdeaManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Menu/>
        <TabControl>
            <TabItem Header="Home">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Please enter your code or generate a new code if you do not have one" HorizontalAlignment="Left" Margin="15,29,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="txtCode" HorizontalAlignment="Left" Margin="15,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                    <Button Name="btnGenerateCode"  Content="Generate Code" HorizontalAlignment="Left" Margin="15,90,0,0" VerticalAlignment="Top" Width="120" Click="btnGenerateCode_Click"/>
                </Grid>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
